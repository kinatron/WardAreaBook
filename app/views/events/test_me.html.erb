<% form_for(@event,      :url => {:action => 'create_new_family_event'})  do |f| %>
  
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
    <%= f.hidden_field :family_id %>
    Visiting
    <%= f.label :person_id %>
    <%= f.select :person_id, @names, {:selected => session[:user_id]} %> <br />
  </p>
  <p>
  <% if @family.teaching_record != nil %>
    <%= f.label :category %>
    <%= f.select :category, teachingRecordCategories %>
  <% else %>
    <%= f.label :category %>
    <%= f.select :category, eventCategories %>
  <% end %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :cols => 75, :rows => 3%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

