<h1>Editing event</h1>

<%= form_for(@event) do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag :redirect, "list" %>

  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
  <%= @event.family.name %> Family (<%= @event.family.head_of_house_hold %>)
  </p>
  <p>
    <%= f.label :category %><br />
    <%= f.select :category, teachingRecordEvents + memberMilestones %>
  </p>
  <p>
    <%= f.label :person_id %><br />
    <%= f.select :person_id, Person.selectionList,
                 :prompt => "Select Visiting Member" %>
    
  </p>
  <p>
    <% author = Person.find(@event.author) %>
    <%= "Event created by: " + author.full_name %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :rows=>5 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
