<h1>Listing callings</h1>

<%= form_tag :action => :updateAccessLevels do %>
  <table>
    <tr>
      <th>PEC <br>Access</th>
      <th>Job</th>
      <th>Assignee(s)</th>
    </tr>
    <% @callings.each do |calling| %>
      <tr>
        <td>
	  <!-- TODO: check if this is right. I think PEC should be 4, not 3. This was set to 2 before I updated it per issue #40 -->
          <%= check_box_tag "accessLevels[#{calling.job}]", value=3, 
            checked = (calling.access_level >= 3) %>
          </td>
          <td><%= calling.job %></td>
          <td>
            <% calling.people.each do |person| %>
              <%= link_to person.full_name, person_path(person) %><% unless calling.people.last == person %>, <% end %> 
            <% end %>
          </td>         
        </tr>
      <% end %>
    </table>
    <br />
    <%= submit_tag "Update Access Levels" %>
  <% end %>

  <br> <br> 
  <%= link_to 'New calling', new_calling_path %>
  <br><br>
