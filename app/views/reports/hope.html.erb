<h1>Hope's Report</h1>
<% @event_weeks.each do |week, events| %>  
  <% events.sort! { |a,b| a.family.name <=> b.family.name } %>
  <div class = "noPrint">
    <a href ='#' class = 'subtile-links' 
      onclick="Effect.toggle('<%= week.to_s %>-events', 'blind'); return false;">
      <h4><%= week %>&#151;<%= week.advance(:days => 6) %></h4></a>
  </div>
  <ul>
    <div id='<%= week.to_s %>-events' style='display:none'>
      <div class = "justPrint">
        <h1><%= week %>&#151;<%= week.advance(:days => 6) %></h1>
      </div>
      <b>
        Lessons Taught      <%=getWeeklyTotal(events,"Lesson")%>&nbsp;&nbsp;&nbsp;&nbsp;
        Visits              <%=getWeeklyTotal(events,"Visit")%>&nbsp;&nbsp;&nbsp;&nbsp;
        Attempts to Contact <%=getWeeklyTotal(events,"Attempt")%>&nbsp;&nbsp;&nbsp;&nbsp;
      </b>
      <br><br>
      <%= render(:partial => "hope", :object => events) %>
    </div>
  </ul>
<% end %> 
