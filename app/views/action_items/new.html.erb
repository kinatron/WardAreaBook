<h1>New action_item</h1>

<%= form_for(@action_item) do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.label :family_id %><br />
  <%= f.select :family_id, options_for_select(Family.all.map { |fam| [fam.full_name, fam.id] }) %>
  </p>
  <p>
  <%= f.label :person_id %><br />
  <%= f.select :person_id, options_for_select(Person.all.map { |p| [p.full_name, p.id] }) %>
  </p>
  <p>
  <%= f.label :action %><br />
  <%= f.text_area :action %>
  </p>
  <p>
  <%= f.label :due_date %><br />
  <%= f.date_select :due_date %>
  </p>
  <p>
  <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', action_items_path %>
