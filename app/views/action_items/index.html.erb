<h1>Listing action_items</h1>

<table>
  <tr>
    <th>Assignee</th>
    <th>Family</th>
    <th>Action</th>
    <th>Due date</th>
    <th>Status</th>
    <th>Issuer</th>
    <th colspan="3">Actions</th>
  </tr>

<% @action_items.each do |action_item| %>
  <tr>
    <td><%= action_item.person.full_name %></td>
    <td><%= action_item.family.name %></td>
    <td><%= action_item.action %></td>
    <td><%= action_item.due_date %></td>
    <td><%= action_item.status %></td>
    <td><%= action_item.author %></td>
    <td><%= link_to 'Show', action_item %></td>
    <td><%= link_to 'Edit', edit_action_item_path(action_item) %></td>
    <td><%= button_to 'Destroy', action_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New action_item', new_action_item_path %>
